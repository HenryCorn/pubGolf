---
import BaseLayout from '../layouts/BaseLayout.astro';
import GlassCard from '../components/GlassCard.astro';
import { supabase } from '../lib/supabase';
import { calculateHoleScore, sortPlayersByScore, getScoreColorClass, getPositionClass } from '../utils/score';
import type { Player, Pub, Score, PlayerWithScores } from '../types/database';

// Fetch data from Supabase
const { data: players } = await supabase
  .from('players')
  .select('*')
  .order('name');

const { data: pubs } = await supabase
  .from('pubs')
  .select('*')
  .order('order_index');

const { data: scores } = await supabase
  .from('scores')
  .select('*');

const { data: settings } = await supabase
  .from('tournament_settings')
  .select('*')
  .single();

// Process players with their scores
const playersWithScores: PlayerWithScores[] = (players || []).map(player => {
  const playerScores = (scores || []).filter(s => s.player_id === player.id);
  const totalScore = playerScores.reduce((sum, score) => sum + calculateHoleScore(score), 0);
  
  return {
    ...player,
    scores: playerScores,
    totalScore
  };
});

const sortedPlayers = sortPlayersByScore(playersWithScores);
const pubsList = pubs || [];
const currentPubId = settings?.current_pub_id || pubsList[0]?.id;
const currentPub = pubsList.find(p => p.id === currentPubId) || pubsList[0];
const currentPubIndex = pubsList.findIndex(p => p.id === currentPubId);
---

<BaseLayout title="PUB GOLF VOL.4 - THE XMAS ONE | Live Leaderboard">
  <!-- Hero Section -->
  <section class="gradient-bg min-h-screen flex items-center justify-center relative">
    <div class="aurora"></div>
    
    <!-- Floating Golf Balls -->
    <div class="floating-ball" style="top: 20%; left: 10%; animation-delay: 0s;"></div>
    <div class="floating-ball" style="top: 60%; left: 80%; animation-delay: 2s;"></div>
    <div class="floating-ball" style="top: 30%; left: 70%; animation-delay: 4s;"></div>
    
    <div class="container mx-auto px-4 text-center relative z-10">
      <GlassCard class="max-w-4xl mx-auto">
        <div class="text-center text-white">
          <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-amber to-gold rounded-full flex items-center justify-center text-6xl">
            üéÑ‚õ≥
          </div>
          
          <h1 class="font-display text-4xl md:text-6xl font-bold hero-title mb-4">
            PUB GOLF VOL.4
          </h1>
          <h2 class="font-display text-2xl md:text-3xl text-amber mb-6">
            THE XMAS ONE
          </h2>
          
          <div class="text-sm text-white/70 mb-4">
            üìÖ November 14, 2025 | üöÇ Starts at Bicester Village Train Station
          </div>
          
          <div class="flex items-center justify-center mb-6">
            <div class="live-indicator w-3 h-3 bg-red-500 rounded-full mr-3"></div>
            <span class="text-lg font-medium">Live Tournament in Progress</span>
          </div>
          
          <p class="text-lg text-white/80 max-w-2xl mx-auto leading-relaxed">
            Follow the festive tournament as golfers navigate 7 pubs with Christmas-themed challenges. 
            Real-time scoring, live updates, and interactive charts bring the holiday competition to life.
          </p>
        </div>
      </GlassCard>
    </div>
  </section>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8 pb-24">
    <!-- Tournament Progress -->
    <section class="mb-8">
      <GlassCard>
        <h3 class="font-display text-2xl font-bold mb-4 text-center">üéÑ Tournament Progress</h3>
        
        {pubsList.length > 0 ? (
          <>
            <div class="flex items-center justify-center gap-2 mb-6 flex-wrap">
              {pubsList.map((pub, index) => (
                <div class="flex items-center">
                  <button 
                    class="pub-progress-btn text-center cursor-pointer hover:scale-105 transition-transform"
                    data-pub-index={index}
                  >
                    <div class={`w-10 h-10 rounded-full flex items-center justify-center text-white font-bold text-sm mb-1 ${
                      index <= currentPubIndex ? 'bg-amber' : 'bg-gray-400'
                    }`}>
                      {index + 1}
                    </div>
                    <span class="text-xs max-w-[60px] block truncate" class:list={{
                      'text-amber font-semibold': index === currentPubIndex
                    }}>{pub.name.split(' ')[0]}</span>
                  </button>
                  {index < pubsList.length - 1 && (
                    <div class={`w-4 h-0.5 mx-1 ${index < currentPubIndex ? 'bg-amber' : 'bg-gray-300'}`}></div>
                  )}
                </div>
              ))}
            </div>
            
            <div class="text-center bg-amber/10 rounded-lg p-4">
              <span class="text-lg font-semibold text-amber">üìç Currently at: {currentPub?.name}</span>
              <p class="text-sm text-gray-600 mt-1">
                <strong>{currentPub?.challenge}</strong> ‚Ä¢ {currentPub?.drink} ‚Ä¢ Par {currentPub?.par}
              </p>
            </div>
          </>
        ) : (
          <div class="text-center text-gray-500">
            <p>Loading tournament progress...</p>
          </div>
        )}
      </GlassCard>
    </section>

    <!-- Leaderboard -->
    <section class="mb-8">
      <GlassCard>
        <div class="flex items-center justify-between mb-6">
          <h3 class="font-display text-2xl font-bold">Live Leaderboard</h3>
          <div class="flex items-center text-sm text-gray-600">
            <div class="live-indicator w-2 h-2 bg-red-500 rounded-full mr-2"></div>
            Auto-updating
          </div>
        </div>
        
        <div id="leaderboard" class="space-y-4">
          {sortedPlayers.length > 0 ? sortedPlayers.map((player, index) => {
            const position = index + 1;
            const positionClass = getPositionClass(position);
            const scoreColor = getScoreColorClass(player.totalScore);
            
            return (
              <div class="score-card glass rounded-xl p-4 cursor-pointer hover:translate-y-[-2px] hover:scale-[1.02] transition-all">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-4">
                    <div class={`text-2xl font-bold ${positionClass} w-8`}>
                      {position}
                    </div>
                    <div class="text-2xl">{player.avatar}</div>
                    <div>
                      <h4 class="font-semibold text-lg">{player.name}</h4>
                      <p class="text-sm text-gray-600">
                        Current Score: <span class={`${scoreColor} font-bold`}>{player.totalScore}</span>
                      </p>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-sm text-gray-600">Holes Played</div>
                    <div class="font-bold text-lg">{player.scores.length}/{pubsList.length}</div>
                  </div>
                </div>
              </div>
            );
          }) : (
            <div class="text-center text-gray-600 py-8">
              <p>No players yet. Add players from the admin dashboard.</p>
            </div>
          )}
        </div>
      </GlassCard>
    </section>

    <!-- Tournament Rules -->
    <section class="mb-8">
      <GlassCard>
        <h3 class="font-display text-2xl font-bold mb-4">General Rules</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h4 class="font-semibold text-amber mb-2">Basic Rules</h4>
            <ul class="text-sm space-y-1 text-gray-700">
              <li>‚Ä¢ Say thanks when served (+1 penalty if not)</li>
              <li>‚Ä¢ Don't spill your drink (+1 penalty per spill)</li>
              <li>‚Ä¢ Don't get tagged (first 3 pubs only) ‚Üí 1 shot</li>
              <li>‚Ä¢ A secret token will be passed between pubs</li>
              <li>‚Ä¢ Don't trip (+1 penalty)</li>
              <li>‚Ä¢ Remember golfer names (+1 penalty if not)</li>
            </ul>
          </div>
          <div>
            <h4 class="font-semibold text-amber mb-2">Scoring System</h4>
            <ul class="text-sm space-y-1 text-gray-700">
              <li>‚Ä¢ Sips count as strokes</li>
              <li>‚Ä¢ Par varies by drink difficulty</li>
              <li>‚Ä¢ Bonuses for challenge winners</li>
              <li>‚Ä¢ Penalties for rule violations</li>
              <li>‚Ä¢ Lowest total score wins</li>
            </ul>
          </div>
        </div>
      </GlassCard>
    </section>
  </main>

  <!-- Challenge Details Dialog -->
  <div id="challenge-dialog" class="hidden fixed inset-0 bg-black/70 z-50 flex items-center justify-center p-4" style="backdrop-filter: blur(4px);">
    <div class="glass-dark max-w-2xl w-full max-h-[80vh] overflow-y-auto p-6 rounded-2xl text-white">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h3 id="dialog-pub-name" class="font-display text-2xl font-bold text-amber mb-1"></h3>
          <p id="dialog-challenge-name" class="text-lg text-white/90 mb-2"></p>
        </div>
        <button id="close-dialog" class="text-white/70 hover:text-white text-3xl leading-none">&times;</button>
      </div>
      
      <div class="space-y-4">
        <div class="bg-white/10 rounded-lg p-4">
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-amber font-semibold">Drink:</span>
              <p id="dialog-drink" class="text-white/90"></p>
            </div>
            <div>
              <span class="text-amber font-semibold">Par:</span>
              <p id="dialog-par" class="text-white/90"></p>
            </div>
          </div>
        </div>
        
        <div id="dialog-details" class="prose prose-invert prose-sm max-w-none">
          <!-- Challenge details will be inserted here -->
        </div>
      </div>
    </div>
  </div>

  <script>
    // Initialize realtime updates
    import { initializeRealtime, showRealtimeNotification } from '../lib/realtime';
    
    // Challenge details for each pub
    const challengeDetails = [
      {
        name: "SECRET SANTA",
        details: `<div class="space-y-3">
          <p><strong>Requirements:</strong> Vinted / Aliexpress / eBay / Amazon</p>
          <p><strong>¬£5 limit</strong> - Phones swapped to buy gifts</p>
          <p>Referee chooses winners/losers</p>
          <div class="bg-green-900/30 p-3 rounded mt-2">
            <p class="font-semibold text-green-400 mb-1">Bonuses:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ +2 bonus ‚Äì winner</li>
              <li>‚Ä¢ +1 bonus ‚Äì runner up</li>
            </ul>
          </div>
          <div class="bg-red-900/30 p-3 rounded">
            <p class="font-semibold text-red-400 mb-1">Penalties:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ +1 penalty ‚Äì second to last</li>
              <li>‚Ä¢ +2 penalty ‚Äì last place</li>
            </ul>
          </div>
        </div>`
      },
      {
        name: "SPLIT THE G",
        details: `<div class="space-y-3">
          <p><strong>+1 penalty if you don't know the game</strong></p>
          <div class="bg-green-900/30 p-3 rounded mt-2">
            <p class="font-semibold text-green-400 mb-1">Bonuses:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ +3 bonus ‚Äì winner</li>
              <li>‚Ä¢ +2 bonus ‚Äì runner up</li>
            </ul>
          </div>
          <div class="bg-red-900/30 p-3 rounded">
            <p class="font-semibold text-red-400 mb-1">Penalties:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ +2 penalty ‚Äì second to last</li>
              <li>‚Ä¢ +3 penalty ‚Äì last place</li>
            </ul>
          </div>
        </div>`
      },
      {
        name: "SPOTIFY WRAPPED",
        details: `<div class="space-y-3">
          <p>Write your top 5 expected artists of the year</p>
          <div class="bg-red-900/30 p-3 rounded mt-2">
            <p class="font-semibold text-red-400 mb-1">Penalties:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ 1 penalty per match with another golfer</li>
              <li>‚Ä¢ If 3 or more matches: take a shot</li>
            </ul>
          </div>
        </div>`
      },
      {
        name: "IS IT SAFE WITH ALCOHOL?",
        details: `<div class="space-y-3">
          <p>Guess if a drug is compatible with alcohol</p>
          <p><strong>2 questions per person</strong></p>
          <div class="bg-red-900/30 p-3 rounded mt-2">
            <p class="font-semibold text-red-400 mb-1">Penalty:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ 1 penalty per wrong answer</li>
            </ul>
          </div>
        </div>`
      },
      {
        name: "IS IT A LATIN AMERICA XMAS TRADITION?",
        details: `<div class="space-y-3">
          <p>Guess if something is a real Latin American Xmas tradition</p>
          <p><strong>2 questions per person</strong></p>
          <div class="bg-red-900/30 p-3 rounded mt-2">
            <p class="font-semibold text-red-400 mb-1">Penalties:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ 1 penalty per wrong answer</li>
              <li>‚Ä¢ If both answers wrong ‚Üí take a shot</li>
            </ul>
          </div>
          <div class="bg-green-900/30 p-3 rounded">
            <p class="font-semibold text-green-400 mb-1">Bonus:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ If both right ‚Üí send a shot to someone</li>
            </ul>
          </div>
        </div>`
      },
      {
        name: "12(/4) SHOTS OF XMAS",
        details: `<div class="space-y-3">
          <p><strong>Each golfer gets 3 shots:</strong></p>
          <ul class="text-sm space-y-2 mt-2">
            <li>‚Ä¢ One for yourself</li>
            <li>‚Ä¢ One for the person above you in ranking</li>
            <li>‚Ä¢ One for the person below you in ranking</li>
          </ul>
          <p class="mt-3 text-sm text-white/70">If tie ‚Üí sender chooses</p>
        </div>`
      },
      {
        name: "BOXING DAY (PUB)",
        details: `<div class="space-y-3">
          <ol class="text-sm space-y-2">
            <li>1. Down your drink</li>
            <li>2. Draw a character chosen by referee</li>
            <li>3. Top half gets 25 seconds</li>
            <li>4. Bottom half gets 50 seconds</li>
            <li>5. Referee judges drawings</li>
          </ol>
          <div class="bg-green-900/30 p-3 rounded mt-2">
            <p class="font-semibold text-green-400 mb-1">Bonus:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ +4 bonus ‚Äì best drawing</li>
            </ul>
          </div>
          <div class="bg-red-900/30 p-3 rounded">
            <p class="font-semibold text-red-400 mb-1">Penalty:</p>
            <ul class="text-sm space-y-1">
              <li>‚Ä¢ +4 penalty ‚Äì worst drawing</li>
            </ul>
          </div>
        </div>`
      }
    ];
    
    document.addEventListener('DOMContentLoaded', () => {
      // Setup realtime subscription
      const channel = initializeRealtime(() => {
        showRealtimeNotification('Score updated! Refreshing...');
        // Reload page to get fresh data
        setTimeout(() => window.location.reload(), 1000);
      });
      
      // Cleanup on page unload
      window.addEventListener('beforeunload', () => {
        if (channel) {
          channel.unsubscribe();
        }
      });

      // Challenge dialog functionality
      const dialog = document.getElementById('challenge-dialog');
      const dialogPubName = document.getElementById('dialog-pub-name');
      const dialogChallengeName = document.getElementById('dialog-challenge-name');
      const dialogDrink = document.getElementById('dialog-drink');
      const dialogPar = document.getElementById('dialog-par');
      const dialogDetails = document.getElementById('dialog-details');
      const closeBtn = document.getElementById('close-dialog');

      // Get pub data from the page
      const pubData = JSON.parse(document.getElementById('pub-data')?.textContent || '[]');

      // Add click handlers to pub progress buttons
      document.querySelectorAll('.pub-progress-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const index = parseInt(btn.dataset.pubIndex);
          const pub = pubData[index];
          const challenge = challengeDetails[index];

          if (pub && challenge) {
            dialogPubName.textContent = pub.name;
            dialogChallengeName.textContent = challenge.name;
            dialogDrink.textContent = pub.drink;
            dialogPar.textContent = pub.par;
            dialogDetails.innerHTML = challenge.details;
            
            dialog.classList.remove('hidden');
          }
        });
      });

      // Close dialog handlers
      closeBtn?.addEventListener('click', () => dialog.classList.add('hidden'));
      dialog?.addEventListener('click', (e) => {
        if (e.target === dialog) dialog.classList.add('hidden');
      });
    });
  </script>

  <!-- Pub data for JavaScript -->
  <script id="pub-data" type="application/json" set:html={JSON.stringify(pubsList)} />

</BaseLayout>

<style>
  .score-card {
    transition: all 0.3s ease;
  }
</style>
